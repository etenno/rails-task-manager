<%= form_for(@task) do |f| %>
  <%= f.label :title, "Enter a title" %>
  <%= f.text_field :title, placeholder: @task[:title] %>

  <%= f.label :details, "What are the datails of the task" %>
  <%= f.text_field :details, placeholder: @task[:details] %>

  <%= f.label :completed, "completed?" %>
  <%= f.text_field :completed, placeholder: @task[:completed] %>

  <%= f.submit %>
<% end %>
